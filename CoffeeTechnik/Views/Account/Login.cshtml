@model CoffeeTechnik.Models.LoginViewModel

<h2 class="mb-3">Вход</h2>

<form asp-action="Login" method="post">
    <div class="mb-3">
        <label class="form-label">Потребителско име</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Парола</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label class="form-check-label">Запомни ме</label>
    </div>

    <button type="submit" class="btn btn-primary">Вход</button>
</form>

<form asp-action="GuestLogin" method="post" class="mt-3">
    <button type="submit" class="btn btn-secondary">
        Влез като гост
    </button>
</form>
