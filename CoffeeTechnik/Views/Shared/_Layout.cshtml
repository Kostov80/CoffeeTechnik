@{
    var role = TempData["UserRole"]?.ToString() ?? "Guest";
    TempData.Keep("UserRole");

    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeTechnik</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoffeeTechnik.styles.css" asp-append-version="true" />
</head>
<body>

    @* Показваме navbar само ако НЕ сме на Login страницата *@
    @if (!(currentController == "Account" && currentAction == "Login"))
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
                <div class="container-fluid">

                    <a class="navbar-brand text-white" asp-controller="Home" asp-action="Index">
                        CoffeeTechnik
                    </a>

                    <button class="navbar-toggler" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarNav"
                            aria-controls="navbarNav"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Начало</a>
                            </li>

                            @if (role == "Sales")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="ServiceRequest" asp-action="Create">Нова заявка</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Objects" asp-action="Index">Обекти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Machines" asp-action="Index">Машини</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Reports" asp-action="Index">Справки</a>
                                </li>
                            }

                            @if (role == "Technician")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Objects" asp-action="Index">Обекти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Machines" asp-action="Index">Машини</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Service" asp-action="Index">Сервизна дейност</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Warehouse" asp-action="Index">Склад</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Reports" asp-action="Index">Справки</a>
                                </li>
                            }

                            @if (role == "Guest")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Objects" asp-action="Index">Обекти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Reports" asp-action="Index">Справки</a>
                                </li>
                            }

                        </ul>

                        @* Покажи Изход само ако потребителят е влязъл или е гост *@
                        <span class="navbar-text text-white me-3">
                            Роля: @role
                        </span>

                        <a class="btn btn-outline-danger"
                           asp-controller="Account"
                           asp-action="Logout">
                            Изход
                        </a>

                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2026 - CoffeeTechnik
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
