@{
    ViewData["Title"] = "Нова заявка";
}

<div class="container mt-4">

    <div class="mb-4">
        <h4 class="text-center">Нова заявка</h4>
    </div>

    <!-- Бутоните за различните типове заявки -->
    <div class="d-flex flex-column align-items-center gap-3 mb-5">
        <a asp-controller="ServiceRequest" asp-action="CreateMontage" class="btn btn-outline-primary btn-lg w-50">Монтаж</a>
        <a asp-controller="ServiceRequest" asp-action="CreateDemontage" class="btn btn-outline-secondary btn-lg w-50">Демонтаж</a>
        <a asp-controller="ServiceRequest" asp-action="CreateEmergency" class="btn btn-outline-danger btn-lg w-50">Авария</a>
        <a asp-controller="ServiceRequest" asp-action="CreateMaintenance" class="btn btn-outline-success btn-lg w-50">Профилактика</a>
    </div>

</div>

<!-- Бутон "Виж заявки" долу вдясно -->
<a class="btn btn-info"
   asp-action="Index"
   asp-controller="ServiceRequest"
   style="position: fixed; bottom: 20px; right: 20px; z-index: 1000;">
    Виж заявки
</a>

<!-- Фиксиран бутон "Назад" долу вляво -->
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary"
   style="position: fixed; bottom: 20px; left: 20px; z-index: 1000;">
    ← Назад
</a>
