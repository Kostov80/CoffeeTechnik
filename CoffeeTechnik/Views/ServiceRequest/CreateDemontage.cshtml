@{
    ViewData["Title"] = "Демонтаж";
}

<div class="container mt-4">

    <div class="mb-3 text-center">
        <h5 class="fw-semibold">Демонтаж</h5>
        <hr />
    </div>

    <form asp-action="CreateDemontage" asp-controller="ServiceRequest" method="post">
                
        <div class="mb-3">
            <label class="form-label">Име на обекта</label>
            <div class="d-flex gap-2">
                <input class="form-control" name="objectName" required />

                <button type="button"
                        class="btn btn-outline-info"
                        data-bs-toggle="modal"
                        data-bs-target="#infoModal">
                    Информация
                </button>
            </div>
        </div>
                
        <div class="mb-3">
            <label class="form-label">Подал заявката</label>
            <input class="form-control" name="requester" required />
        </div>
                
        <div class="mb-3">
            <label class="form-label">Причина за демонтаж</label>
            <textarea class="form-control" name="reason" rows="3" required></textarea>
        </div>
                
        <div class="mb-3">
            <label class="form-label">Извършил демонтажа</label>
            <div class="d-flex gap-2">
                <input id="technicianInput"
                       class="form-control"
                       name="technician"
                       required
                       oninput="enableNote()" />

                <button type="button"
                        class="btn btn-outline-secondary"
                        id="noteBtn"
                        disabled
                        data-bs-toggle="modal"
                        data-bs-target="#noteModal">
                    Забележка
                </button>
            </div>
        </div>

        
        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="ServiceRequest"
               asp-action="Create"
               class="btn btn-outline-secondary">
                ← Назад
            </a>

            <button type="submit" class="btn btn-danger">
                Демонтаж
            </button>
        </div>

        
        <div class="modal fade" id="noteModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">Забележка от техника</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <textarea class="form-control"
                                  name="note"
                                  rows="4"
                                  placeholder="Въведи забележка (по желание)">
                        </textarea>
                    </div>

                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal">
                            Затвори
                        </button>
                    </div>

                </div>
            </div>
        </div>

        
        <div class="modal fade" id="infoModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">Информация за обекта</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <p><strong>Име на обекта:</strong> (данни от монтаж)</p>
                        <p><strong>Булстат:</strong> *********</p>
                        <p><strong>Град:</strong> *********</p>
                        <p><strong>Адрес:</strong> *********</p>
                        <p><strong>Модел машина:</strong> *********</p>

                        <div class="alert alert-info mt-3">
                            Данните ще се зареждат автоматично от заявката за монтаж.
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal">
                            Затвори
                        </button>
                    </div>

                </div>
            </div>
        </div>

    </form>
</div>

<script>
    function enableNote() {
        const tech = document.getElementById("technicianInput").value;
        document.getElementById("noteBtn").disabled = tech.trim() === "";
    }
</script>
