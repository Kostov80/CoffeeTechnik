@model CoffeeTechnik.Models.Machine

@{
    ViewData["Title"] = "Създай машина";
}

<h1>@ViewData["Title"]</h1>

<h4>Машина</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Model" class="form-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SerialNumber" class="form-label"></label>
                <input asp-for="SerialNumber" class="form-control" />
                <span asp-validation-for="SerialNumber" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InstallationDate" class="form-label"></label>
                <input asp-for="InstallationDate" class="form-control" type="date" />
                <span asp-validation-for="InstallationDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ObjectEntityId" class="form-label"></label>
                <select asp-for="ObjectEntityId" class="form-control" asp-items="ViewBag.ObjectEntityId">
                    <option value="">-- Изберете обект --</option>
                </select>
                <span asp-validation-for="ObjectEntityId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Създай</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">← Назад към списъка</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
